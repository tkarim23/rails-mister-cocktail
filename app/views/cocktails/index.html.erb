<%= render "partials/banner" %>
<div  class="container  text-center pad20">

  <h1 class="text-underline text-brand">Delicious cocktails</h1>

  <div class="row">

    <% @cocktails.each do |cocktail| %>

    <div class="col-xs-12 col-sm-4">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">

        <div class="card-description">
          <h2 > <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-link" %> </h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>


  <div class="pad10">
    <%= link_to "Add your cocktail", new_cocktail_path, class: "btn btn-primary pad20" %>
  </div>

</div>
